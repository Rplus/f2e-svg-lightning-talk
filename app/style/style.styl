body {
    background-color: #ffc;
}

.logo {
    width 400px
    height 200px
    margin 0 auto
    text-align center
    outline 1px solid #ccc

    &::after {
        content ''
        display inline-block
        vertical-align middle
        height 200px
        width 0
    }

    &::before {
        display inline-block
        vertical-align middle
        font-size 200px
    }

    appicon('disney-SS');

    @media (min-width: 300px) {
        appicon('disney-S');
    }

    @media (min-width: 400px) {
        appicon('disney-M');
    }

    @media (min-width: 500px) {
        appicon('disney-L');
    }
}
